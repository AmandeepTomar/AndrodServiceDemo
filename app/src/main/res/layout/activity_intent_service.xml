<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intentservice.IntentServiceActivity">
    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/start_service"
        android:id="@+id/btnIsStartService"/>
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnIsStartService"
        android:text="@string/stop_service"
        android:id="@+id/btnIsStopService"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_0dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnIsStopService"
        android:text="Start job Intent"
        android:id="@+id/btnStartJobIntentService"/>
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStartJobIntentService"
        android:text="Stop Job Intent"
        android:id="@+id/btnIsStopJobIntentService"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_0dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnIsStopJobIntentService"
        android:text="Start Foreground Service"
        android:id="@+id/btnStartForegroundService"/>
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStartJobIntentService"
        android:text="Stop  Foreground Service"
        android:id="@+id/btnIsStopForegroundService"/>
</androidx.constraintlayout.widget.ConstraintLayout>